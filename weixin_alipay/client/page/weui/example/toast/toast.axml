<view class="page">
    <view class="page__hd">
        <view class="page__title">Toast</view>
        <view class="page__desc">弹出式提示，采用小程序原生的toast</view>
    </view>
    <view class="page__bd">
        <view class="weui-btn-area">
            <onekit-button Class="weui-btn" type="default" onTap="openToast">成功提示</onekit-button>
            <onekit-button Class="weui-btn" type="default" onTap="openLoading">加载中提示</onekit-button>
        </view>
    </view>
</view>