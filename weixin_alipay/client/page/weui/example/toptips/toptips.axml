<mp-toptips msg="{{message}}" type="{{type}}" show="{{showTopTips}}" delay="{{3000}}"></mp-toptips>
<view class="toptips-container">
  <view class="toptips-content">
    <input class="weui-input" auto-focus placeholder="输入文本" onInput="bindInputValue" value="{{value}}"></input>
    <onekit-button on:tap="bindConfirmTap" Class="container-button" type="primary">确认</onekit-button>
  </view>
</view>